CHECK_PHP_VERSION(50000, [
	if (PHP_VERSION_ID < 80000) {
		ARG_WITH('viaeval', 'Enable viaeval support', 'no');

		EXTENSION('viaeval', 'viaeval.c');
	}
]);

CHECK_PHP_VERSION(80000, [
	ARG_ENABLE('viaeval', 'viaeval support', 'no');

	if (PHP_VIAEVAL != 'no') {
		AC_DEFINE('HAVE_VIAEVAL', 1, 'viaeval support enabled');

		EXTENSION('viaeval', 'viaeval.c', null, '/DZEND_ENABLE_STATIC_TSRMLS_CACHE=1');
	}
]);
